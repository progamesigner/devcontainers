{
    "id": "aws-cli",
    "version": "1.0.0",
    "name": "AWS CLI",
    "description": "Install AWS CLI",
    "options": {
        "version": {
            "type": "string",
            "proposals": [
                "none"
            ],
            "default": "none",
            "description": "Select or enter a AWS CLI version to install"
        },
        "ssm": {
            "type": "boolean",
            "default": true,
            "description": "Enable AWS SSM plugin"
        }
    },
    "containerEnv": {
        "PATH": "${PATH}:/usr/local/share/aws-cli/bin"
    }
}
